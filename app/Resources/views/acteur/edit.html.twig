{% extends 'base.html.twig' %}

    {% block body %}
        <div class="row" style="margin-left: 2%">
            <div class="col-md-2">
                <div class="box" style="width: 280%; margin-top: 10%; padding-bottom: 2% ">
                    <div class="box-header">
                        <h1 class="box-title"> Editer l'acteur <code>{{ acteur.nom }} {{ acteur.prenom }}</code></h1>
                    </div>

                </div>
            </div>
            <div class="col-md-9">

                <div class="box" style="margin-left: 33%; margin-right: 20%; width: 66%; margin-top: 2%; padding-bottom: 2% ">

                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        {{ form_start(edit_form) }}
                        <table class="table table-condensed table-responsive" style="margin-left: 5%;margin-top: 2%">

                            <tr >
                                <th width="5%"> Nom </th>
                                <td width="15%">
                                    {{ form_widget(edit_form.nom) }}
                                </td>
                                <td width="3%"></td>
                            </tr>
                            <tr >
                                <th width="5%"> Prenom </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.prenom) }}
                                </td> <td width="3%"></td>
                            </tr >
                            <tr >
                                <th width="5%"> Date de naissance </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.dateNaiss) }}
                                </td> <td width="3%"></td>
                            </tr>
                            <tr >
                                <th width="5%"> sexe </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.sexe) }}
                                </td> <td width="3%"></td>
                            </tr>
                            <tr >
                                <th width="5%"> Nationalité </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.nationalite) }}
                                </td> <td width="3%"></td>
                            </tr>

                            <tr  style="display: none">
                                <th width="5%"> Date de création </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.createdAt) }}
                                </td> <td width="3%"></td>
                            </tr>
                            <tr  style="display: none">
                                <th width="5%"> Date de mise à jours </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.updatedAt) }}
                                </td> <td width="3%"></td>
                            </tr>
                            <tr >
                                <th width="5%"> Films </th>
                                <td width="15%" >
                                    {{ form_widget(edit_form.film) }}
                                </td> <td width="2%"></td>
                            </tr>


                        </table>
                        <div class="row">
                            <div class="col-md-2 offset-md-1"  style="margin-left: 32%;">
                                <span>  {{ form_widget(edit_form.sauvegarder) }}</span>
                            </div>

                            <div class="col-md-3">
                                <a class="btn btn-info" href="{{ path('Auteur_index') }}">Back to the list</a>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>



                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
        </div>


{% endblock %}