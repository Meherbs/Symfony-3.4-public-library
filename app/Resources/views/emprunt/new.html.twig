{% extends 'base.html.twig' %}

{% block body %}

    <div class="row" style="margin-left: 1%">
        <div class="col-md-2">
            <div class="box" style="width: 320%; margin-top: 10%; padding-bottom: 2% ">
                <div class="box-header">
                    <h1 class="box-title"> <code>Emprunter</code> des films  </h1>
                    <div class="box" style="margin-left: 6%; margin-right: 25%; width: 85%; margin-top: 2%; padding-bottom: 2%">
                        <div style="margin-left: 2%;margin-top: 2%; font-size: 14px">
                            <a style="margin-left: 5%;" href="{{ path('Emprunt_index') }}">Back to the list</a>

                        </div>

                        <!-- /.box-header -->

                        <!-- /.box-body -->
                    </div>
                </div>
                <div class="box-body no-padding box" style="margin-left: 8%; margin-right: 25%; width: 80%; margin-top: 2%; padding-bottom: 2%">
                    {{ form_start(form) }}
                    <table class="table table-condensed table-responsive" style="margin-top: 1%">

                        <tr>
                            <th width="20%"> Adh√©rent </th>
                            <td width="40%">
                                {{ form_widget(form.adherent) }}
                            </td>
                        </tr>
                        <tr>
                            <th width="20%"> Film </th>
                            <td width="50%">
                                {{ form_start(form) }}
                                {{ form_widget(form.film) }}
                            </td>
                            <td width="10%"><div style="margin-left: 3%;">
                                    <button type="submit">
                                        <i class="fa fa-plus-square" style="font-size:24px"></i>
                                    </button>
                                </div></td>

                        </tr>
                        <tr style="display: none">
                            <td width="20%">
                                {{ form_widget(form.dhEmprunt) }}
                            </td>

                        </tr>
                        <tr style="display: none">
                            <td width="20%">
                                {{ form_widget(form.dhRetour) }}
                            </td>

                        </tr>
                    </table>
                    <div class="row">


                    </div>
                    <div class="row" style="margin-top: 3%">

                        {{ form_end(form) }}
                    </div>



                </div>

            </div>
        </div>
        <div class="col-md-9">

            <div class="box" style="margin-left: 39%; margin-right: 20%; width: 69%; margin-top: 2%; padding-bottom: 2% ">

                <!-- /.box-header -->
                <div class="box-body no-padding">

                    <table class="table table-hover">
                        <thead class="table-success">
                        <tr>
                            <th class="text-center">Id_Emprunt</th>
                            <th class="text-center">Film</th>

                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="tabcontent-border">
                               {% for temp in emprunt %}
                        <tr >
                            <td class="text-center" style="text-align: center">
                                {% if temp.getIdEmprunt() %} {{ temp.getIdEmprunt() }} {% endif %}
                            </td>
                            <td class="text-center" >{% if temp.getFilm() %} {{ temp.getFilm().getTitre() }} {% endif %}</td>
                            <td class="text-center">
                                        {% if temp.getIdEmprunt() %}
                                            {{ render(controller('FilmBundle:Emprunt:deleteNew',{'idEmprunt':temp.getIdEmprunt()})) }}
                                        {% endif %}
                            </td>
                        </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>

        </div>
    </div>
{% endblock %}