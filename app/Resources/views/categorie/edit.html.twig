
{% extends 'base.html.twig' %}

    {% block body %}
        <div class="row" style="margin-left: 2%">
            <div class="col-md-2">
                <div class="box" style="width: 280%; margin-top: 10%; padding-bottom: 2% ">
                    <div class="box-header">
                        <h1 class="box-title"> Editer la categorie <code>{{ categorie.designCategorie }}</code> </h1>
                    </div>

                </div>
            </div>
            <div class="col-md-9">

                <div class="box" style="margin-left: 33%; margin-right: 20%; width: 66%; margin-top: 2%; padding-bottom: 2% ">

                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        {{ form_start(edit_form) }}
                        <table class="table table-condensed table-responsive" style="margin-left: 5%;margin-top: 2%">

                            <tr >
                                <th width="5%">  Id category </th>
                                <td width="15%">
                                    {{ categorie.idCategorie }}
                                </td>
                                <td width="3%"></td>
                            </tr>
                            <tr >
                                <th width="5%"> Category Design </th>
                                <td width="15%" >
                                    {{ form_start(edit_form) }}
                                    {{ form_widget(edit_form.designCategorie) }}
                                </td> <td width="3%"></td>
                            </tr >
                        </table>
                        <div class="row">
                            <div class="col-md-2 offset-md-1"  style="margin-left: 32%;">
                                <input class="btn btn-outline-primary" type="submit" value="Edit" />
                            </div>

                            <div class="col-md-3">
                                <a class="btn btn-info" href="{{ path('Categorie_index') }}">Back to the list</a>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>



                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
        </div>


    {% endblock %}
