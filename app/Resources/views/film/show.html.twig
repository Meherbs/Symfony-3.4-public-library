{% extends 'base.html.twig' %}

{% block body %}
    <div class="row" style="margin-left: 2%">
        <div class="col-md-2 col-sm-4">
            <div class="box" style="height:454px;width: 285%; margin-top: 10%;">
                <div class="box-header" style="text-align: center">
                    <h3 class="box-title" >Couverture de film <code>{{ film.titre }}</code></h3>
                </div>
                <img style="margin-left: 10%;margin-bottom: 1%" width="300px" height="400px" src="{{ asset('images/film/') }}{{ film.couverture }}">
            </div>
        </div>
        <div class="col-md-9 col-sm-9">

            <div class="box" style="margin-left: 33%; margin-right: 20%;
             width: 66%; height:454px;  margin-top: 2%;">
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <div class="box-header" style="text-align: center">
                        <h3 class="box-title">Information de film <code>{{ film.titre }}</code></h3>
                    </div>
                    <table class="table table-condensed table-responsive" style="margin-left: 5%;margin-top: 8%">
                        <tr>
                            <th style="font-size: 24px" width="10% mar"> Id Film</th>
                            <td style="font-size: 24px" width="10%">
                                {{ film.idFilm }}
                            </td>
                        </tr>
                        <tr>
                            <th style="font-size: 24px"  width="10%"> Titre</th>
                            <td style="font-size: 24px" width="10%">
                                {{ film.titre }}
                            </td>
                        </tr>
                        <tr>
                            <th style="font-size: 24px" width="10%"> Date de sortie</th>
                            <td style="font-size: 24px" width="10%" class="offset-md-3">
                                {% if film.dateSortie %}{{ film.dateSortie|date('Y-m-d H:i:s') }}{% endif %}
                            </td>
                        </tr>
                        <tr style="display: none">
                            <th style="font-size: 24px"  width="10%"> Description</th>
                            <td style="font-size: 24px" width="10%">
                                {{ film.description }}
                            </td>
                        </tr>
                       <tr></tr>
                        <tr>
                            <th style="font-size: 24px" width="10%"> Disponible</th>
                            <td style="font-size: 24px" width="10%" class="offset-md-3">
                                {% if film.disponible %}Oui{% else %}Non{% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th style="font-size: 24px" width="10%"> Date de création</th>
                            <td style="font-size: 24px" width="10%" class="offset-md-3">
                                {% if film.createdAt %}{{ film.createdAt|date('Y-m-d H:i:s') }}{% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th style="font-size: 24px" width="10%"> Date de mise à jours</th>
                            <td style="font-size: 24px" width="10%" class="offset-md-3">
                                {% if film.updatedAt %}{{ film.updatedAt|date('Y-m-d H:i:s') }}{% endif %}
                            </td>
                        </tr>

                    </table>
                    <div class="row" style="margin-top: 6%">
                        <div class="col-md-2" style="margin-left: 22%;">
                            <span>  <a class="btn btn-info" href="{{ path('Film_edit', { 'idFilm': film.idFilm }) }}">Editer</a> </span>
                        </div>

                        <div class="col-md-3">
                            <a class="btn btn-info" href="{{ path('Film_index') }}">Back to the list</a>
                        </div>
                        <div class="col-md-3">
                            {{ form_start(delete_form) }}
                            <input class="btn btn-info" type="submit" value="Delete">
                            {{ form_end(delete_form) }}
                        </div>

                    </div>


                </div>
                <!-- /.box-body -->
            </div>


        </div>
        <!-- /.box-body -->
    </div>
    <div class="row" style="margin-left: 2%">
        <div class="col-md-12">
            <div class="box" style="padding-bottom: 2%;width: 956px ">
                <div style="text-align: center;font-size: 24px;color: #2b91af">
                    <code> Description  </code>
                </div>
                <div style="font-size: 14px; margin-left: 2%">
                    {{ film.description }}
                </div>
            </div>
        </div>

    </div>


{% endblock %}
